{
  "name": "@pyyupsk/vite-plugin-sitemap",
  "version": "0.0.1",
  "description": "A modern Vite plugin for generating XML sitemaps from file-based conventions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "vite-sitemap": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "sitemap",
    "xml",
    "seo",
    "typescript"
  ],
  "author": "pyyupsk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pyyupsk/vite-plugin-sitemap"
  },
  "bugs": {
    "url": "https://github.com/pyyupsk/vite-plugin-sitemap/issues"
  },
  "homepage": "https://github.com/pyyupsk/vite-plugin-sitemap#readme",
  "dependencies": {
    "commander": "^14.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "tsdown": "^0.16.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  },
  "peerDependencies": {
    "vite": "^7"
  },
  "engines": {
    "node": ">=22"
  }
}
