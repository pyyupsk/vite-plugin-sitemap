{
  "name": "@pyyupsk/vite-plugin-sitemap",
  "version": "0.2.1",
  "type": "module",
  "description": "A modern Vite plugin for generating XML sitemaps from file-based conventions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pyyupsk/vite-plugin-sitemap.git"
  },
  "homepage": "https://github.com/pyyupsk/vite-plugin-sitemap#readme",
  "bugs": {
    "url": "https://github.com/pyyupsk/vite-plugin-sitemap/issues"
  },
  "author": "pyyupsk",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "vite-sitemap": "dist/cli/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vite",
    "vite-plugin",
    "sitemap",
    "xml",
    "seo",
    "typescript"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch --no-clean",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vite": "^7"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "@types/picomatch": "^4.0.2",
    "eslint": "^9.39.1",
    "tsdown": "^0.17.0-beta.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  }
}
